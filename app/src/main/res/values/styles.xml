<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" >
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/AppTheme.ActionBarBackground</item>
        <!--<item name="colorPrimaryDark">@color/colorBlack</item>-->
        <!--<item name="colorAccent">@color/colorGreenTitle</item>-->
        <item name="android:textColor">@color/colorFontBlack</item>
        <item name="android:textColorPrimary">@color/colorFontBlack</item>
        <item name="android:textColorSecondary">@color/colorFontBlack</item>
        <item name="android:actionMenuTextColor">@color/colorFontBlack</item>
        <item name="android:popupMenuStyle">@style/AppTheme.MenuBackground</item>
        <item name="android:editTextStyle">@style/AppTheme.InputTextBackground</item>


    </style>
    <style name="AppTheme.RadialBackground">
        <item name="android:background">@drawable/radial_background</item>
        <item name="android:textColor">@color/colorFontBlack</item>

    </style>
    <style name="AppTheme.ActionBarBackground" parent="android:Widget.ActionBar">
        <item name="android:textColor">@color/colorFontBlack</item>
        <item name="android:background">@drawable/linear_background</item>
    </style>
    <style name="AppTheme.MenuBackground" parent="android:Widget.PopupMenu">
        <item name="android:textColor">@color/colorFontBlack</item>
        <item name="android:background">@color/colorGrayTitle</item>
    </style>
    <style name="AppTheme.InputTextBackground" parent="android:Widget.EditText">
        <item name="android:textColor">@color/colorFontBlack</item>
        <!--<item name="android:colorBackground">@color/colorFieldBackground</item>-->
    </style>
    <style name="AppTheme.ReminderText">
        <item name="android:textColor">@color/colorFontBlack</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>




