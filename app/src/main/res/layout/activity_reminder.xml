<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reminder_scrowView"
    style="@style/AppTheme.RadialBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ReminderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/reminder_text1_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reminder_text1"
                style="@style/AppTheme.ReminderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="50dp"
                android:text="Você lembra o que é a placa bacteriana?" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reminder_img1_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="50dp">

            <ImageView
                android:id="@+id/reminder_img1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/image1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reminder_down1_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="50dp">

            <TextView
                android:id="@+id/reminder_text_down1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/slide_down" />

            <ImageView
                android:id="@+id/reminder_img_down1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/sort_down" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reminder_text2_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="50dp">

            <TextView
                android:id="@+id/reminder_text2"
                style="@style/AppTheme.ReminderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Ela causa uma inflamação na gengiva e sangramento gengival." />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reminder_img2_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="50dp">

            <ImageView
                android:id="@+id/reminder_img2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/image2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reminder_down2_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="50dp">

            <TextView
                android:id="@+id/reminder_text_down2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slide_down" />

            <ImageView
                android:id="@+id/reminder_img_down2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/sort_down" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reminder_text3_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="50dp">

            <TextView
                android:id="@+id/reminder_text3"
                style="@style/AppTheme.ReminderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="texto3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reminder_video_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:minHeight="264dp"
            android:orientation="horizontal"
            android:paddingTop="50dp">

            <VideoView
                android:id="@+id/reminder_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/reminder_text4_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="50dp">

            <TextView
                android:id="@+id/reminder_text4"
                style="@style/AppTheme.ReminderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="texto4" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>